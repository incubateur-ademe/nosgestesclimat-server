{
  "name": "nosgestesclimat-server",
  "version": "1.0.6",
  "description": "",
  "main": "./dist/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist/*",
    "dev": "NODE_ENV=development nodemon --watch ./src ./src/index.ts",
    "generateEnvDeclaration": "yarn run-script scripts/generateEnvDeclaration.ts",
    "lint": "eslint",
    "run-script": "ts-node --project scripts/tsconfig.json",
    "start": "NODE_OPTIONS=--max-old-space-size=8192 node ./dist/src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:load:soak": "artillery run ./tests/load/soak-test.yml",
    "test:load:spike": "artillery run ./tests/load/spike-test.yml"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@incubateur-ademe/nosgestesclimat": "^2.4.2",
    "@publicodes/tools": "^1.1.2",
    "@types/express": "^4.17.21",
    "apicache": "^1.6.3",
    "axios": "^1.6.5",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.0.3",
    "express": "^4.17.2",
    "fast-stats": "^0.0.6",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.1.10",
    "nanoid": "3.3.4",
    "nodemon": "^3.0.3",
    "publicodes": "1.1.1",
    "slugify": "^1.6.6",
    "socket.io": "^4.4.1",
    "yaml": "^2.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.7.0",
    "@swc/jest": "^0.2.36",
    "@tsconfig/node22": "^22.0.0",
    "@types/apicache": "^1.6.6",
    "@types/bluebird": "^3.5.42",
    "@types/fast-stats": "^0.0.35",
    "@types/jest": "^29.5.12",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.7",
    "artillery": "^2.0.8",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}