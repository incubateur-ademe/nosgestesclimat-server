{
  "name": "nosgestesclimat-server",
  "version": "1.5.0",
  "description": "The server part of the website nosgestesclimat.fr",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist/*",
    "db:migrate": "prisma migrate deploy",
    "db:grant-roles": "node ./dist/prisma/grant-roles.js",
    "dev": "NODE_ENV=development nodemon --watch ./src ./src/index.ts",
    "format": "prettier --write \"**/*.{js,ts,md,json}\" && eslint . --fix --ext .js,.ts",
    "generateEnvDeclaration": "yarn run-script scripts/generateEnvDeclaration.ts",
    "lint": "prettier --check \"**/*.{js,ts,md,json}\" && eslint . --ext .js,.ts",
    "run-script": "ts-node --project tsconfig.json",
    "start": "NODE_OPTIONS=--max-old-space-size=8192 node ./dist/src/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:load:spike": "artillery run ./tests/load/spike-test.yml",
    "test:load:soak": "artillery run ./tests/load/soak-test.yml",
    "prepare": "husky"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@incubateur-ademe/nosgestesclimat": "^3.4.3",
    "@prisma/client": "^6.0.0",
    "@publicodes/tools": "^1.2.5",
    "@sentry/node": "^8.26.0",
    "apicache": "^1.6.3",
    "axios": "^1.6.5",
    "axios-retry": "^4.5.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.0.3",
    "express": "^4.17.2",
    "fast-stats": "^0.0.6",
    "http-status-codes": "^2.3.0",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.1.10",
    "morgan": "^1.10.0",
    "nanoid": "3.3.4",
    "nodemon": "^3.0.3",
    "publicodes": "1.1.1",
    "slugify": "^1.6.6",
    "socket.io": "^4.4.1",
    "supertest": "^7.0.0",
    "winston": "^3.14.2",
    "winston-transport-sentry-node": "^3.0.0",
    "yaml": "^2.0.1",
    "zod": "^3.23.8",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.2.14",
    "@faker-js/faker": "^8.4.1",
    "@swc/core": "^1.7.0",
    "@swc/jest": "^0.2.36",
    "@tsconfig/node22": "^22.0.0",
    "@types/apicache": "^1.6.6",
    "@types/bluebird": "^3.5.42",
    "@types/express": "^4.17.21",
    "@types/fast-stats": "^0.0.35",
    "@types/jest": "^29.5.12",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "artillery": "^2.0.8",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "mongodb-memory-server": "^10.0.0",
    "nock": "^13.5.4",
    "pglite-prisma-adapter": "^0.3.0",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "setupFiles": [
      "../jest.env.ts"
    ],
    "setupFilesAfterEnv": [
      "../jest.setup.ts"
    ],
    "testTimeout": 15000,
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,ts,md,json}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
