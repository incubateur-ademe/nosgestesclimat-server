{
  "name": "nosgestesclimat-server",
  "version": "1.24.0",
  "description": "The server part of the website nosgestesclimat.fr",
  "main": "./dist/index.js",
  "type": "module",
  "engines": {
    "node": "^22"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist/*",
    "db:doc": "./prisma/docs/generate-doc.sh",
    "db:migrate": "prisma migrate deploy",
    "db:post-migrate": "node ./dist/prisma/index.js",
    "dev": "NODE_ENV=development nodemon --watch ./src ./src/index.ts",
    "dev:worker": "NODE_ENV=development nodemon --watch ./src ./src/worker.ts",
    "format": "prettier --write \"**/*.{js,ts,md,json}\" && eslint . --fix --ext .js,.ts",
    "jobs:computePollStats": "node dist/src/jobs/compute-poll-stats.js",
    "jobs:recoverMatomoStats": "node dist/src/jobs/recover-matomo-stats.js",
    "jobs:recoverNewsletterStats": "node dist/src/jobs/recover-newsletter-stats.js",
    "lint": "prettier --check \"**/*.{js,ts,md,json}\" && eslint . --ext .js,.ts",
    "prestart": "yarn db:doc",
    "start": "NODE_OPTIONS=--max-old-space-size=8192 node ./dist/src/index.js",
    "start:worker": "NODE_OPTIONS=--max-old-space-size=8192 node ./dist/src/worker.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.848.0",
    "@aws-sdk/s3-request-presigner": "^3.848.0",
    "@incubateur-ademe/nosgestesclimat": "3.8.3",
    "@prisma/client": "^6.0.0",
    "@publicodes/tools": "^1.7.2",
    "@sentry/node": "^9.40.0",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/express": "^3.52.1",
    "@ts-rest/open-api": "^3.52.1",
    "axios": "^1.10.0",
    "axios-retry": "^4.5.0",
    "change-case": "^5.4.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.0",
    "express": "^4.17.2",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "papaparse": "^5.5.3",
    "prisma": "^5.18.0",
    "publicodes": "^1.9.0",
    "request-ip": "^3.3.0",
    "slugify": "^1.6.6",
    "supertest": "^7.1.3",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-transport-sentry-node": "^3.0.0",
    "xlsx": "^0.18.5",
    "yaml": "^2.8.0",
    "yargs": "^18.0.0",
    "zod": "^3.23.8",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.5",
    "@faker-js/faker": "^9.9.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.15",
    "@types/papaparse": "^5.3.16",
    "@types/redis-mock": "^0.17.3",
    "@types/request-ip": "^0.0.41",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.4",
    "nodemon": "^3.1.10",
    "pglite-prisma-adapter": "^0.3.0",
    "prettier": "^3.6.2",
    "redis-mock": "^0.56.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,md,json}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
