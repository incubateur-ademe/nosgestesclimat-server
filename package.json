{
  "name": "nosgestesclimat-server",
  "version": "2.9.1",
  "description": "The server part of the website nosgestesclimat.fr",
  "main": "./dist/index.js",
  "type": "module",
  "engines": {
    "node": "^22"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist/*",
    "db:doc": "./prisma/docs/generate-doc.sh",
    "db:migrate": "prisma migrate deploy",
    "db:post-migrate": "node ./dist/prisma/index.js",
    "dev": "NODE_ENV=development tsx --watch ./src ./src/index.ts",
    "dev:worker": "NODE_ENV=development tsx --watch ./src ./src/worker.ts",
    "format": "prettier --write \"**/*.{js,ts,md,json}\" && eslint . --fix --ext .js,.ts",
    "jobs:computePollStats": "node dist/src/jobs/compute-poll-stats.js",
    "jobs:recoverMatomoStats": "node dist/src/jobs/recover-matomo-stats.js",
    "jobs:recoverNewsletterStats": "node dist/src/jobs/recover-newsletter-stats.js",
    "lint": "prettier --check \"**/*.{js,ts,md,json}\" && eslint . --ext .js,.ts && tsc -p .",
    "prestart": "yarn db:doc",
    "start": "NODE_OPTIONS=--max-old-space-size=8192 node ./dist/src/index.js",
    "start:worker": "NODE_OPTIONS=--max-old-space-size=8192 node ./dist/src/worker.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "author": "",
  "license": "MIT",
  "resolutions": {
    "@prisma/driver-adapter-utils": "^6.16.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.918.0",
    "@aws-sdk/s3-request-presigner": "^3.918.0",
    "@incubateur-ademe/nosgestesclimat": "^4.2.0",
    "@prisma/client": "^6.18.0",
    "@prisma/driver-adapter-utils": "^6.16.2",
    "@publicodes/tools": "^1.8.0",
    "@sentry/node": "^10.22.0",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/express": "^3.52.1",
    "@ts-rest/open-api": "^3.52.1",
    "axios": "^1.13.0",
    "axios-retry": "^4.5.0",
    "change-case": "^5.4.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^4.17.2",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "papaparse": "^5.5.3",
    "prisma": "^6.18.0",
    "publicodes": "^1.9.1",
    "request-ip": "^3.3.0",
    "slugify": "^1.6.6",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "winston-transport-sentry-node": "^3.0.0",
    "xlsx": "^0.18.5",
    "yaml": "^2.8.1",
    "yargs": "^18.0.0",
    "zod": "^3.23.8",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.11",
    "@faker-js/faker": "^10.1.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@types/papaparse": "^5.3.16",
    "@types/redis-mock": "^0.17.3",
    "@types/request-ip": "^0.0.41",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yargs": "^17.0.34",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "msw": "^2.11.6",
    "pglite-prisma-adapter": "^0.6.1",
    "prettier": "^3.6.2",
    "redis-mock": "^0.56.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,md,json}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
